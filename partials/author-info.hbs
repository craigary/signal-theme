{{#primary_author}}
  <section class="author-info bg-red-100 border border-red-200 my-16 px-4 py-6 shadow-lg">

    <div class="flex">
      <div class="mr-4 w-24">
        <img class="author-info__image rounded-full" src="{{profile_image}}" alt="{{name}}â€™s Profile Image" />
      </div>

      <div class="text-sm">
        <strong class="author-info__name m-0 p-0 text-base">
            Written by <a class="no-underline" href="{{url}}">{{name}}</a>
        </strong>

        {{#if bio}}
          <div class="author-info__bio mb-0">{{bio}}</div>
          <!-- this p tag is closed after the location and website info -->
        {{else}}
          <div>Read <a href="{{url}}">more posts</a> by this author.</div>
          <!-- this p tag is closed after the location and website info -->
        {{/if}}
        <div class="author-info__meta mt-2">
          {{#if location}}
            <span class="author-info__location ">
              Location:&nbsp;<strong>{{location}}</strong>&ensp;
            </span>
          {{/if}}

          {{#if website}}
            <span class="author-info__website">
              Website:&nbsp;<a href="{{website}}"><strong>{{website}}</strong></a>&ensp;
            </span>
          {{/if}}

          {{#if twitter}}
            <span class="author-info__twitter">
              Twitter&nbsp;handle:&nbsp;<a href="{{twitter_url}}"><strong>{{twitter}}</strong></a>.
            </span>
          {{/if}}
        </div> {{! end author meta }}
      </div>

    </div>

  </section> {{! end author info }}
{{/primary_author}}
