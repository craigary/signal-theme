{
  "name": "signal",
  "description": "A tailwind minimal theme for tech writer using the Ghost blogging platform",
  "demo": "http://github.com/julienbourdeau/signal",
  "version": "0.1.0",
  "engines": {
    "ghost": ">=3.11.0",
    "ghost-api": "v3"
  },
  "author": {
    "name": "julienbourdeau",
    "email": "julien@sigerr.org",
    "url": "https://www.sigerr.org"
  },
  "scripts": {
    "dev": "gulp",
    "zip": "gulp zip",
    "test": "gscan .",
    "test:ci": "gscan --fatal --verbose .",
    "pretest": "gulp build",
    "preship": "yarn test",
    "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi"
  },
  "devDependencies": {
    "autoprefixer": "9.7.3",
    "cssnano": "4.1.10",
    "gscan": "3.3.3",
    "gulp": "4.0.2",
    "gulp-livereload": "4.0.1",
    "gulp-postcss": "8.0.0",
    "gulp-sourcemaps": "2.6.5",
    "gulp-uglify": "3.0.2",
    "gulp-util": "3.0.8",
    "gulp-watch": "5.0.1",
    "gulp-zip": "5.0.0",
    "postcss-color-function": "4.1.0",
    "postcss-custom-properties": "9.1.1",
    "postcss-easy-import": "3.0.0"
  },
  "config": {
    "posts_per_page": 5,
    "image_sizes": {
      "xs": {
        "width": 400
      },
      "s": {
        "width": 600
      },
      "m": {
        "width": 800
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 3000
      }
    }
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Responsive",
      "Starter theme",
      "Boilerplate",
      "Typographic"
    ]
  },
  "keywords": [
    "responsive",
    "ghost",
    "minimal",
    "theme",
    "ghost-theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/julienbourdeau/signal.git"
  }
}
